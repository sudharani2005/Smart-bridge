#include<Servo.h> const int i =D1; 
const int s1=D2;
const int s2=D3;
Servo myservo1;
Servo myservo2; 
void setup()
{
// put your setup code here, to run once:
// for giving input
pinMode(i, INPUT);
//Attaching servo motors
myservo1.attach(s1); 
myservo2.attach(s2); 
Serial.begin(9600);
}

void loop() {
// put your main code here, to run repeatedly: 
int a=digitalRead(i);
if(a==1)
{
// if the input is 1 means there is water content increse that limit then height of the bridge will increase:
myservo1.write(180); 
myservo2.write(180);
}
else
{
// if input if 0 water content is not reach to limit there in no change in height of the bridge:
myservo1.write(0);
myservo2.write(0);
}
}
